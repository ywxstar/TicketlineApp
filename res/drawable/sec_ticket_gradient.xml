<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#414444"
                android:endColor="#00B2FF"
                android:angle="270" />
            <stroke
                android:width="0.5dp"
                android:color="#00B2FF" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#000000"
                android:startColor="#414444"
                android:angle="270" />
            <stroke
                android:width="0.5dp"
                android:color="#00B2FF" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#000000"
                android:startColor="#414444"
                android:angle="270" />
            <stroke
                android:width="0.5dp"
                android:color="#00B2FF" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>
