<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#990099"
                android:endColor="#9933CC"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#00FFFF" />
                       <corners android:bottomRightRadius="0.1dp" android:bottomLeftRadius="0.1dp" android:topLeftRadius="7dp" android:topRightRadius="7dp"/> 
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#9933CC"
                android:startColor="#990099"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#00FFFF" />
                       <corners android:bottomRightRadius="0.1dp" android:bottomLeftRadius="0.1dp" android:topLeftRadius="7dp" android:topRightRadius="7dp"/> 
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#990099"
                android:startColor="#9933CC"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#00FFFF" />
            <corners android:bottomRightRadius="0.1dp" android:bottomLeftRadius="0.1dp" android:topLeftRadius="7dp" android:topRightRadius="7dp"/>  
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
