<?xml version="1.0" encoding="UTF-8"?>

<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" >

	<TableLayout 
		android:layout_width="wrap_content" 
		android:layout_below="@+id/LinearLayout02" 
		android:layout_height="wrap_content" 
		android:id="@+id/TableLayout01">
		
	    <!--table 1  -->
		<RelativeLayout 
			android:id="@+id/RelativeLayout01" 
			android:layout_width="wrap_content" 
			android:layout_height="42dip" 
			android:background="@drawable/topbar">
			
			<LinearLayout 
				android:id="@+id/LinearLayout01" 
				android:layout_width="fill_parent" 
				android:layout_height="42dip">
				
				<TextView
				    android:id="@+id/txtName"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_centerVertical="true"
				    android:layout_gravity="center_vertical"
				    android:paddingLeft="5dip"
				    android:text="Recomended"
				    android:textAppearance="?android:attr/textAppearanceMedium"
				    android:textColor="#ffffff" >
				</TextView>
			</LinearLayout>
		 
		</RelativeLayout>

		<!--table 2  -->
		<RelativeLayout 
			android:id="@+id/RelativeLayout01" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="5dip">
			
			<LinearLayout 
			    android:id="@+id/LinearLayout03"
			    android:layout_height="wrap_content"
			    android:layout_width="fill_parent" 
			    android:gravity="center">
					
				<Button 
				    android:id="@+id/Button03" 
				    android:text="Tickets" 
				    android:layout_height="31dip" 
				    android:background="@drawable/tabinuse" 
				    android:textColor="#FFFFFF" 
				    android:layout_width="107dip"></Button>
				
				<Button 
				    android:id="@+id/Button02" 
				    android:onClick="Tour" 
				    android:text="Tour" 
				    android:layout_height="31dip" 
				    android:background="@drawable/tabbarnotinuse" 
				    android:textColor="#00B2FF" 
				    android:layout_width="106dip"></Button>
				
				<Button 
				    android:id="@+id/Button01" 
				    android:text="Bio" 
				    android:onClick="Bio" 
				    android:textColor="#00B2FF" 
				    android:background="@drawable/tabbarnotinuse" 
				    android:layout_height="31dip" 
				    android:layout_width="107dip"></Button>
				
			</LinearLayout>
			
		</RelativeLayout>
		
		<!--table 3  -->
		<RelativeLayout 
		    android:id="@+id/RelativeLayout04" 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="0dip" 
		    android:layout_marginRight="0dip">
			
			<ListView 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:id="@+id/lstNew" 
			    android:cacheColorHint="@android:color/transparent" 
			    android:dividerHeight="0.5dip" 
			    android:divider="#4D4D4D" 
			    android:listSelector="@layout/list_selector">
			</ListView>
			
		</RelativeLayout>
		
	</TableLayout>

</FrameLayout>