<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_root"
              android:layout_width="fill_parent"
              android:padding="10dp"
              android:layout_height="wrap_content" android:background="@drawable/dialog_shape" android:orientation="vertical">
    
    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Artist Name" android:textColor="#00B2FF" android:textSize="18dip" android:textStyle="bold" android:id="@+id/txtName" android:gravity="center"></TextView>
    
    <Button android:layout_height="wrap_content" android:id="@+id/btnOk" android:layout_width="fill_parent" android:background="@drawable/dialog_gradient" android:text="OK" android:textColor="#00B2FF" android:textSize="18dip" android:textStyle="bold" android:layout_marginTop="20dip"></Button>

              
              
</LinearLayout>