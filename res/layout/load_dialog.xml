<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_root"
              android:layout_width="fill_parent"
              android:padding="10dp"
              android:layout_height="wrap_content"  
              android:orientation="vertical" 
              android:background="@drawable/list_shape_gradient">
              
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:orientation="horizontal" android:gravity="center">
        <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/progressBar1" android:progressDrawable="@drawable/button_gradient" android:indeterminateDuration="1000" android:indeterminateDrawable="@drawable/custom_progress"></ProgressBar>
        <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:layout_marginLeft="10dip" android:textColor="#00B2FF" android:textSize="16dip" android:textStyle="bold" android:id="@+id/txtLoad"></TextView>
    </LinearLayout>

              
              
</LinearLayout>