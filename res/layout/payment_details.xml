<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:id="@+id/relLayout">

        <TableLayout android:paddingLeft="5dip" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:background="@drawable/profile_gradient" android:paddingRight="5dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tblInfo">
            <TableRow android:layout_width="fill_parent" android:id="@+id/TableRow05" android:layout_height="wrap_content">
                <RelativeLayout android:layout_height="50dip" android:layout_marginRight="5dip" android:layout_width="wrap_content" android:id="@+id/RelativeLayout10" android:background="@drawable/topbar">
                    <TextView android:id="@+id/TextView11" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_width="100dip" android:textColor="#fff" android:layout_marginLeft="10dip" android:textSize="15dip" android:layout_height="wrap_content" android:text="Type:"></TextView>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="115dip" android:layout_centerVertical="true" android:textSize="15dip" android:id="@+id/txtType" android:textColor="#00B2FF"></TextView>

                </RelativeLayout>
            </TableRow>
            <TableRow android:layout_width="wrap_content" android:id="@+id/TableRow07" android:layout_height="wrap_content">
                <RelativeLayout android:layout_height="50dip" android:id="@+id/RelativeLayout04" android:layout_width="wrap_content" android:background="@drawable/topbar" android:layout_marginRight="5dip">
                    <TextView android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_height="wrap_content" android:textSize="15dip" android:layout_width="100dip" android:textColor="#fff" android:id="@+id/TextView02" android:layout_marginLeft="10dip" android:text="Display Name:"></TextView>
                    <EditText android:editable="false" android:singleLine="true" android:textSize="15dip" android:layout_centerVertical="true" android:layout_height="fill_parent" android:textColor="#00B2FF" android:layout_width="wrap_content" android:background="#00000000" android:layout_marginLeft="115dip" android:id="@+id/txtDisplayName">
                        <requestFocus></requestFocus>
                    </EditText>
                </RelativeLayout>
            </TableRow>
            <TableRow android:layout_width="wrap_content" android:id="@+id/TableRow04" android:layout_height="wrap_content">
                <RelativeLayout android:layout_height="50dip" android:layout_marginRight="5dip" android:layout_width="wrap_content" android:id="@+id/RelativeLayout11" android:background="@drawable/topbar">
                    <TextView android:id="@+id/TextView14" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_width="100dip" android:textColor="#fff" android:layout_marginLeft="10dip" android:textSize="15dip" android:layout_height="wrap_content" android:text="Number:"></TextView>
                    <EditText android:background="#00000000" android:textSize="15dip" android:layout_centerVertical="true" android:layout_width="fill_parent" android:id="@+id/txtCardNo" android:layout_marginLeft="115dip" android:layout_height="fill_parent" android:inputType="number" android:singleLine="true" android:editable="false" android:textColor="#00B2FF"></EditText>

                </RelativeLayout>
            </TableRow>
            <TableRow android:layout_width="wrap_content" android:id="@+id/TableRow06" android:layout_height="wrap_content">
                <RelativeLayout android:layout_height="50dip" android:layout_marginRight="5dip" android:layout_width="wrap_content" android:id="@+id/RelativeLayout12" android:background="@drawable/topbar">
                    <TextView android:id="@+id/TextView13" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_width="100dip" android:textColor="#fff" android:layout_marginLeft="10dip" android:textSize="15dip" android:layout_height="wrap_content" android:text="Expires End:"></TextView>
                    <EditText android:background="#00000000" android:layout_alignParentLeft="true" android:textSize="15dip" android:layout_centerVertical="true" android:layout_width="wrap_content" android:layout_marginLeft="115dip" android:layout_height="fill_parent" android:inputType="number" android:singleLine="true" android:editable="false" android:textColor="#00B2FF" android:id="@+id/txtExpiry"></EditText>
                </RelativeLayout>
            </TableRow>
            <TableRow android:layout_width="wrap_content" android:id="@+id/TableRow01" android:layout_height="wrap_content" android:visibility="gone">
                <RelativeLayout android:layout_height="50dip" android:layout_marginRight="5dip" android:layout_width="wrap_content" android:id="@+id/RelativeLayout06" android:background="@drawable/topbar">
                    <TextView android:id="@+id/TextView08" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_width="100dip" android:textColor="#fff" android:layout_marginLeft="10dip" android:textSize="15dip" android:layout_height="wrap_content" android:text="CVC:"></TextView>
                    <EditText android:background="#00000000" android:layout_alignParentLeft="true" android:hint="Last 3 digit on signature strip" android:textSize="15dip" android:layout_centerVertical="true" android:layout_width="fill_parent" android:id="@+id/txtSecurityNo" android:layout_marginLeft="115dip" android:maxLength="4" android:layout_height="fill_parent" android:inputType="number" android:singleLine="true" android:editable="true" android:textColor="#00B2FF"></EditText>
                </RelativeLayout>
            </TableRow>
            <TableRow android:layout_width="wrap_content" android:id="@+id/TableRow03" android:layout_height="wrap_content" android:visibility="gone">
                <RelativeLayout android:layout_height="50dip" android:layout_marginRight="5dip" android:layout_width="wrap_content" android:id="@+id/RelativeLayout09" android:background="@drawable/topbar">
                    <TextView android:id="@+id/TextView07" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_width="100dip" android:textColor="#fff" android:layout_marginLeft="10dip" android:textSize="15dip" android:layout_height="wrap_content" android:text="Issue Number"></TextView>
                    <EditText android:background="#00000000" android:layout_alignParentLeft="true" android:hint="Issue no (Maestro Only)" android:textSize="15dip" android:layout_centerVertical="true" android:layout_width="wrap_content" android:id="@+id/txtIssueNo" android:layout_marginLeft="115dip" android:maxLength="2" android:layout_marginRight="20dip" android:layout_height="match_parent" android:cursorVisible="true" android:inputType="number" android:singleLine="true" android:editable="false" android:textColor="#00B2FF"></EditText>
                </RelativeLayout>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/txtError"
            android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
     		android:gravity="center"
     		android:textColor="#00B2FF"
            android:text="TextView"
            android:visibility="invisible" />
        
</RelativeLayout>